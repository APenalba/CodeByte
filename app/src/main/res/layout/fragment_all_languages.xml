<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.allLanguages.AllLanguagesFragment">

    <TextView
        android:id="@+id/allLanguage_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Todos los lenguajes"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/languageProgress_allLanguagesFragment_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:indeterminate="false"
        app:indicatorColor="?attr/colorSecondary"
        app:indicatorSize="6dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allLanguage_textView"
        app:trackColor="?attr/colorSurface"
        app:trackCornerRadius="4dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allLanguage_fragment_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="525dp"
        android:foregroundGravity="left"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/languageProgress_allLanguagesFragment_progressBar" />


</androidx.constraintlayout.widget.ConstraintLayout>